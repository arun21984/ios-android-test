<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
     >
     
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_weight="1.5" >
    
    
    <TextView
        android:id="@+id/labtextHomeTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="Home: " 
        />

    <TextView
        android:id="@+id/labtextAwayTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="Away: " 
       />

    <TextView
        android:id="@+id/labtextStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="Satus: "  />

    <TextView
        android:id="@+id/labtextGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals: " />

    <TextView
        android:id="@+id/labtextDateandtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:" />

    
    </LinearLayout>

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" 
    android:layout_weight="0.5">
    
    
    <TextView
        android:id="@+id/textHomeTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="--" 
        />

    <TextView
        android:id="@+id/textAwayTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="--" 
       />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="--"  />

    <TextView
        android:id="@+id/textGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--" />

    <TextView
        android:id="@+id/textDateandtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--" />

    
    </LinearLayout>

</LinearLayout>
